#!/bin/sh
# Simple pre-commit hook to run basic checks

echo "🔍 Running pre-commit checks..."

# Run type check
echo "Checking TypeScript types..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ Type check failed. Please fix TypeScript errors before committing."
  exit 1
fi

# Run linter
echo "Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Please fix ESLint errors before committing."
  echo "💡 Tip: Run 'npm run lint:fix' to auto-fix some issues."
  exit 1
fi

echo "✅ Pre-commit checks passed!"
exit 0
